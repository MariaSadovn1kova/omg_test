.num-card {
  border-left: 5px solid #BACBA9;
  box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.07);
  border-radius: 5px;
  margin: 0 10px;
  display: flex;
  padding: 10px;
  height: 50px;
  color: #F1BF98;
  transition: 0.3s;
  cursor: pointer;

  &:hover {
    transform: scale(0.8);
  }

  .num-card__content {
    text-align: center;
    width: 100%;
    font-weight: 700;
  }
}
